                    <option value="IB">International Business</option>
                    <option value="GD">Graphic Design</option>
                    <option value="EL">English Language</option>
                    <option value="JL">Japanese Language</option>
                    <option value="IA">Information Assurance</option>
                    <option value="HM">Hospitality Management</option>
                    <option value="DM">Digital Marketing</option>
                    
                </select>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
