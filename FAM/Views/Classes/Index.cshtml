@model IEnumerable<BusinessObj.Models.Class>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

        PagerModel pager = ViewBag.Pager;
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Classes" asp-action="Index" method="get">
    <p>
        Title: <input type="text" name="name" />
        <input type="submit" value="Search" />
    </p>
</form>

<!--topbar-->
<div class="row">
    <div class="col-12">
        <partial name="_topBar" model="@pager"/>
    </div>
</div>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subject.SubjectName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
                        <td>
                @Html.DisplayFor(modelItem => item.Subject.SubjectName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ClassID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ClassID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ClassID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<!--bottombar-->
<div class="row">
    <div class="col-12">
        <partial name="_bottomBar" model="@pager"/>
    </div>
</div>