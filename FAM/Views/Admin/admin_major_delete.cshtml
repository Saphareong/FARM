@model BusinessObj.Models.Major

@{
    ViewData["Title"] = "Admin | Major Delete";
}


<hr />
<div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="breadcome-list single-page-breadcome">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="breadcome-heading">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <ul class="breadcome-menu">
                                <li>
                                    <a asp-controller="Home" asp-action="Index">Home</a> <span class="bread-slash">/</span>
                                </li>
                                <li>
                                    <span class="bread-blod">Delete Major</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="single-pro-review-area mt-t-30 mg-b-15">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="product-payment-inner-st">
                        <ul id="myTabedu1" class="tab-review-design">
                            <li class="active"><a>Major Information</a></li>
                        </ul>
                        <div id="myTabContent" class="tab-content custom-product-edit">
                            <div class="product-tab-list tab-pane fade active in" id="description">
                                <div class="row">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="review-content-section">
                                            <div id="dropzone1" class="pro-ad">
                                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                    <div class="form-group">
                                                        <label asp-for="MajorName" class="control-label"></label>
                                                        <input asp-for="MajorName" class="form-control" ReadOnly="true" />
                                                        <span asp-validation-for="MajorName" class="text-danger"></span>
                                                    </div>

                                                    <div class="form-group">
                                                        <label asp-for="MajorCode" class="control-label"></label>
                                                        <input asp-for="MajorCode" class="form-control" ReadOnly="true" />
                                                        <span asp-validation-for="MajorCode" class="text-danger"></span>
                                                    </div>
                                                    <div class="form-group">
                                                        <input type="button" value="Cancel" onclick="location.href = '@Url.Action("Index","Major")';" class="btn btn-custon-rounded-three btn-danger" />
                                                    </div>
                                                </div>
                                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                                    <form asp-action="Delete" asp-controller="Major">
                                                        <input type="hidden" asp-for="MajorCode" />
                                                        <input type="submit" value="Delete" class="btn btn-custon-rounded-three btn-danger" />
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
