@using BusinessObj.Models;
@using System.Text.Json;
<!doctype html>
<html class="no-js" lang="en">

<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"]</title>
    <meta name="description" content="FAM">
    <meta name="keywords" content="HTML, CSS, JavaScript">
    <meta name="author" content="SonNDH TrungNT.SG">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="shortcut icon" type="image/x-icon" href="~/img/favicon.ico">
    <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,700,900" rel="stylesheet">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    @*<script src="https://use.fontawesome.com/releases/v5.15.4/js/all.js" crossorigin="anonymous"></script>*@
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/owl.carousel.css">
    <link rel="stylesheet" href="~/css/owl.theme.css">
    <link rel="stylesheet" href="~/css/owl.transitions.css">
    <link rel="stylesheet" href="~/css/animate.css">
    <link rel="stylesheet" href="~/css/normalize.css">
    <link rel="stylesheet" href="~/css/meanmenu.min.css">
    <link rel="stylesheet" href="~/css/main.css">
    <link rel="stylesheet" href="~/css/educate-custon-icon.css">
    <link rel="stylesheet" href="~/css/morrisjs/morris.css">
    <link rel="stylesheet" href="~/css/scrollbar/jquery.mCustomScrollbar.min.css">
    <link rel="stylesheet" href="~/css/metisMenu/metisMenu.min.css">
    <link rel="stylesheet" href="~/css/metisMenu/metisMenu-vertical.css">
    <link rel="stylesheet" href="~/css/alerts.css">
    <link rel="stylesheet" href="~/css/modals.css">
    <link rel="stylesheet" href="~/css/timetable.css">
    <link rel="stylesheet" href="~/css/form/all-type-forms.css">
    <link rel="stylesheet" href="~/style.css">
    <link rel="stylesheet" href="~/css/responsive.css">
    <link rel="stylesheet" href="~/css/skdslider.css">



    @await RenderSectionAsync("Styles", required: false)
</head>

<body>
    <!-- Start Left menu area -->
    <div class="left-sidebar-pro">
        <nav id="sidebar" class="">
            <div class="sidebar-header">
                <a asp-area="" asp-controller="Home" asp-action="Index"><img class="main-logo" src="~/img/logo/logo.png" alt="" /></a>
                <strong><a asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/logo/logosn.jpg" alt="" /></a></strong>
            </div>
            <div class="left-custom-menu-adp-wrap comment-scrollbar">
                <nav class="sidebar-nav left-sidebar-menu-pro">
                    <ul class="metismenu" id="menu1">
                        <li>
                            <a asp-area="" asp-controller="Student" asp-action="Index">
                                <span class="fa fa-home"></span>
                                <span class="mini-click-non">Home</span>
                            </a>
                        </li>
                        <li>
                            <a class="#" style="cursor: pointer;">
                                <span class="fa fa-calendar-check-o"></span>
                                <span class="mini-click-non">Timetable</span>
                            </a>
                            <ul class="submenu-angle" aria-expanded="true">
                                <li><a asp-area="" asp-controller="Timetable" asp-action="ViewTimetable"><span class="mini-sub-pro">Thời khoá biểu</span></a></li>
                                <li><a asp-area="" asp-controller="Attendance" asp-action="Index"><span class="mini-sub-pro">Xem Điểm Danh</span></a></li>
                                <li><a asp-area="" asp-controller="Timetable" asp-action="Index"><span class="mini-sub-pro">Lịch Thi</span></a></li>
                            </ul>
                        </li>
                        <li>
                            <a class="#" style="cursor: pointer;">
                                <span class="fa fa-book"></span>
                                <span class="mini-click-non">Subject</span>
                            </a>
                            <ul class="submenu-angle" aria-expanded="true">
                                <li><a asp-area="" asp-controller="Subjects" asp-action="Index"><span class="mini-sub-pro">Danh sách môn</span></a></li>
                                <li><a asp-area="" asp-controller="ClassRegister" asp-action="Index">Danh sách lớp đăng kí</a></li>
                                <li><a asp-area="" asp-controller="ClassRegister" asp-action="Create"><span class="mini-sub-pro">Đăng kí môn</span></a></li>
                            </ul>
                        </li>
                        <li>
                            <a asp-area="" asp-controller="Student" asp-action="Index">
                                <span class="fa fa-id-card-o"></span>
                                <span class="mini-click-non">Bảng điểm</span>
                            </a>
                        </li>
                        <li>
                            <a class="#" style="cursor: pointer;">
                                <span class="fa fa-envelope"></span>
                                <span class="mini-click-non">Manager Application</span>
                            </a>
                            <ul class="submenu-angle" aria-expanded="true">
                                <li><a asp-area="" asp-controller="Application" asp-action="Index"><span class="mini-sub-pro">Danh sách đơn</span></a></li>
                                <li><a asp-area="" asp-controller="Application" asp-action="Create"><span class="mini-sub-pro">Đăng kí đơn</span></a></li>
                            </ul>
                        </li>
                    </ul>
                </nav>
            </div>
        </nav>
    </div>
    <!-- End Left menu area -->
    <!-- Start Welcome area -->
    <div class="all-content-wrapper">
        <!--logo hidden-->
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="logo-pro">
                        <a asp-area="" asp-controller="Home" asp-action="Index"><img class="main-logo" src="~/img/logo/logo.png" alt=""></a>
                    </div>
                </div>
            </div>
        </div>
        @{
            User authenticatedUser = null;
            string loginInfo = Context.Session.GetString("LOGININFO");
            if (loginInfo != null)
            {
                authenticatedUser = JsonSerializer.Deserialize<User>(loginInfo);
            }
        }
        <div class="header-advance-area">
            <div class="header-top-area">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="header-top-wraper">
                                <div class="row">
                                    <div class="col-lg-1 col-md-0 col-sm-1 col-xs-12">
                                        <div class="menu-switcher-pro">
                                            <button type="button" id="sidebarCollapse" class="btn bar-button-pro header-drl-controller-btn btn-info navbar-btn">
                                                <i class="fa fa-bars"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="col-lg-5 col-md-5 col-sm-12 col-xs-12" style="float: right;margin-right: 140px">
                                        <div class="header-right-info">
                                            <ul class="nav navbar-nav mai-top-nav header-right-menu">
                                                <li class="nav-item">
                                                    <a href="#" data-toggle="dropdown" role="button" aria-expanded="false" class="nav-link dropdown-toggle">
                                                        <span class="admin-name">
                                                            <p>@authenticatedUser.Ower</p>
                                                        </span>
                                                        <i class="fa fa-angle-down edu-icon"></i>
                                                    </a>
                                                    <ul role="menu" class="dropdown-header-top author-log dropdown-menu animated zoomIn" style="width: 160px;">
                                                        <li>
                                                            <a asp-area="" asp-controller="Student" asp-action="Profile"><span class="edu-icon edu-home-admin author-log-ic"></span>Xem Tài Khoản</a>
                                                        </li>
                                                        <li>
                                                            <a href="#"><span class="edu-icon edu-user-rounded author-log-ic"></span>Edit Profile</a>
                                                        </li>
                                                        <li>
                                                            <a asp-action="Logout" asp-controller="Home"><span class="edu-icon edu-money author-log-ic"></span>Đăng Xuất</a>
                                                        </li>
                                                    </ul>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            @RenderBody()
        </div>
    </div>
    <!-- End Welcome area -->

    <script src="~/js/vendor/jquery-1.12.4.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/wow.min.js"></script>
    <script src="~/js/jquery.meanmenu.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/jquery.sticky.js"></script>
    <script src="~/js/jquery.scrollUp.min.js"></script>
    <script src="~/js/scrollbar/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="~/js/scrollbar/mCustomScrollbar-active.js"></script>
    <script src="~/js/metisMenu/metisMenu.min.js"></script>
    <script src="~/js/metisMenu/metisMenu-active.js"></script>
    <script src="~/js/tab.js"></script>
    <script src="~/js/plugins.js"></script>
    <script src="~/js/main.js"></script>
    <script src="~/js/ckeditor/ckeditor.js"></script>
    <script src="~/js/skdslider.min.js"></script>
    <script src="~/js/vendor/modernizr-2.8.3.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script type="text/javascript">
        jQuery(document).ready(function() {
            jQuery('#demo1').skdslider({
                'delay': 5000,
                'animationSpeed': 2000,
                'showNextPrev': true,
                'showPlayButton': true,
                'autoSlide': true,
                'animationType': 'fading'
            });
            jQuery('#responsive').change(function() {
                $('#responsive_wrapper').width(jQuery(this).val());
            });
        });
    </script>
</body>
</html>