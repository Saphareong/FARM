@model BusinessObj.Models.UserClass

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            
            <div class="form-group"> Mã Account:
                <input asp-for="AccountId" value="@ViewBag.AccountId" readonly/>
            </div>
            <div class="form-group"> Mã Môn: 
                <input asp-for="SubjectID" value="@ViewBag.SubjectID" readonly/>
            </div>
@*            <div class="form-group">
                Lớp Cũ: <input value="@ViewBag.ClassID" readonly />
            </div>*@

            <div class="form-group">
                <label asp-for="ClassID" class="control-label"></label>
                <select name="ClassID" class="form-control" asp-items="ViewBag.Class"></select>
                <span asp-validation-for="ClassID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
